<p id="notice"><%= notice %></p>

<h1><%= @user.name %></h1>

<h2>Lists:</h2>
<% if @lists.length != 0 %>
    <ul class="list-disc list-inside">
        <% @lists.each do |list| %>
            <li> <%= link_to list.list_title, list_path(list) %> </li>
        <% end %>
    </ul>
<% else %>
    <p>User has no lists. </p>
<% end %>
<p class="mt-4 text-green-200"><%= link_to 'New List', new_list_path %></p>
<br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
