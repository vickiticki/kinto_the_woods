<p id="notice"><%= notice %></p>

<h1 class="font-bold text-2xl my-4"><%= @user.name %></h1>

<h2>Lists:</h2>
<% if @lists.length != 0 %>
    <ul class="list-disc list-inside">
        <% @lists.each do |list| %>
            <li> <%= link_to list.list_title, list_path(list) %> </li>
        <% end %>
    </ul>
<% else %>
    <p>User has no lists. </p>
<% end %>
<p class="mt-4 text-green-200"><%= link_to 'New List', new_list_path %></p>
<br>
<% if @user == current_user%>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'User List', users_path %>
<% if @user == current_user %>
<p class="my-4 bg-white text-red-700 font-bold p-2 max-w-min"><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
