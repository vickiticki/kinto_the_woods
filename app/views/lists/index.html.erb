<h1 class="font-bold text-2xl mb-2">Lists</h1>


<ul>
    <% @lists.each do |list| %>
        <% if list.user_id %>
            <li class="pt-1"> <%= link_to list.list_title, list_path(list) %> </li>
            <span class="pl-8">User: <%= link_to User.find(list.user_id).name, user_path(User.find(list.user_id)) %></span>   
        <% end %>
    <% end %>
</ul>

<p class="mt-4 text-green-200"><%= link_to 'New List', new_list_path %></p>