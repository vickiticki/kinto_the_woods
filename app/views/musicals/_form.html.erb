
<%= form_with(model: @musical, local: true) do |form| %>

<div class="field py-4">
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>

<div class="pb-4">
    <%= form.label :poster %>
    <%= form.file_field :poster %>
</div>

<div class="field pb-4">
    <%= form.label :release_year %>
    <%= form.number_field :release_year %>
</div>

<div class="field pb-4">
    <%= form.label :synopsis %>
    <%= form.text_field :synopsis %>
</div>

<div class="field pb-4">
    <%= form.label "spotify id" %>
    <%= form.text_field :album_id %>
</div>

<%= submit_tag("Create/Update Musical", :class => "bg-blue-800") %>

